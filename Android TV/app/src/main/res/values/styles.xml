<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:colorBackground">#424242</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#E0E0E0</item>
    </style>
    
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ExoStyledControls.SubtitleButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@android:drawable/ic_menu_info_details</item>
        <item name="android:tint">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources> 